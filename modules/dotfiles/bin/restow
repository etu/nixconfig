#!/bin/sh

# Enter directory
cd @dataPrefix@$HOME/.dotfiles

# Update directory
git pull

case $(hostname) in
    "agrajag")
        stow --dotfiles pass skeleton
        ;;

    "eliaxe-A100514-NR")
        stow --dotfiles pass skeleton
        ;;

    "fenchurch")
        stow --dotfiles skeleton
        ;;

    "vps04")
        stow --dotfiles weechat
        ;;

    *)
        echo "This computer is not recognized by restow."
        ;;
esac
